{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Smart Classroom",
  "version": "0.1.0",
  "identifier": "com.ad.tauri-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "auth",
        "title": "Smart School - Auth",
        "url": "/",
        "width": 375,
        "height": 667,
        "resizable": false,
        "center": true,
        "visible": true,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false
      },
      {
        "label": "main",
        "title": "Smart School",
        "url": "/#/dashboard",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "center": true,
        "visible": false,
        "decorations": false,
        "minWidth": 360,
        "minHeight": 640
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "os": {}
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": {
          "en-US": {
            "localePath": "./wix/locales/en-US.wxl"
          },
          "vi-VN": {
            "localePath": "./wix/locales/vi-VN.wxl"
          }
        }
      }
    },
    "externalBin": [
      "bin/server"
    ]
  }
}